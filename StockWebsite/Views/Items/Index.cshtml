@model IEnumerable<StockWebsite.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Home</h2>

<p>
    @Html.ActionLink("Add New Item", "Create", null, new { @class = "btn btn-success" })
</p>

<p>
    @Html.ActionLink("purchase Items", "purchase",null, new { @class = "btn btn-primary" })
</p>
<table class="table" >
    <tr style="background-color:lime">
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemQuantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemQuantity)
        </td>
        <td>
  
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemCode }, new { @class = "btn btn-warning" }) |
       
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemCode }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
